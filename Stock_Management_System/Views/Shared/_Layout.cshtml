<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Task_Management_System</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Stock_Management_System.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.13.1/font/bootstrap-icons.min.css">
</head>
<body>

    <header>

        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark bg-dark text-white border-bottom box-shadow mb-3">

            <div class="container-fluid">
                <a class="navbar-brand border-1 border-white" asp-area="" asp-controller="Home" asp-action="Index">Task_Management_System</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item px-3">
                            <a class="nav-link text-white" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>  

                        <li class="nav-item px-3">
                            <a class="nav-link text-white" asp-area="" asp-controller="Home" asp-action="CompletedTasks">Approved/Rejected_Tasks</a>
                        </li>

                        <li class="nav-item px-3">
                            <a class="nav-link text-white" asp-area="" asp-controller="Home" asp-action="MySubmittedTasks">My_Submitted_Tasks</a>
                        </li>

                        <li class="nav-item px-3">
                            <a class="nav-link text-white" asp-area="" asp-controller="Account" asp-action="ChangePassword">Change Password</a>
                        </li>
                        @inject Task_Management_System.Data.AppDBContext context
                        @using System.Security.Claims
                        @{
                            var empid = int.Parse(User.FindFirst("User Id")?.Value);
                            var unreadCount=context.WalletTransactions.Count(w=>w.Emp_Id==empid && !w.IsRead);
                        }  
                        <li class="nav-item px-3">
                            <a class="nav-link text-white position-relative" asp-area="" asp-controller="Wallet" asp-action="Wallet">Wallet
                                <span class="position-absolute ms-2 top-3 start-100 translate-middle badge rounded-pill bg-danger">
                                    @unreadCount
                                    <span class="visually-hidden">unread messages</span>
                            </a>
                        </li>

                    </ul>
                     <ul class="navbar-nav flex-grow-0 justify-content-end>
                        <li class="nav-item float-end">
                            <a class="nav-link text-white me-4 px-4 btn btn-danger fw-bold" asp-area="" asp-controller="Account" asp-action="Logout">Logout</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2025 - Stock_Management_System - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
