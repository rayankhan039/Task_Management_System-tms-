@using Task_Management_System.ViewModels
@model ChangePasswordVM
<div class="container">
<h2 class="p-3">Change Password</h2>

<form asp-action="ChangePassword" method="post">
    <div class="form-group w-75 mx-auto mt-3">
        <label asp-for="CurrentPassword"></label>

        <div class="input-group">
        <input asp-for="CurrentPassword" class="form-control shadow" id="currentPassword" />

        <button type="button" class="btn btn-outline-secondary" onclick="togglePassword('currentPassword')">
                show

            </button>

        </div>

        <span asp-validation-for="CurrentPassword" class="text-danger"></span>
    </div>

    <div class="form-group w-75 mx-auto mt-3">
        <label asp-for="NewPassword"></label>
        <div class="input-group">
        <input asp-for="NewPassword" class="form-control shadow" id="newPassword" />
        <button type="button" class="btn btn-outline-secondary" onclick="togglePassword('newPassword')">
            show
        </button>
    </div>

        <span asp-validation-for="NewPassword" class="text-danger"></span>
    </div>

    <div class="form-group w-75 mx-auto mt-3">
        <label asp-for="ConfirmPassword"></label>
        <div class="input-group">

        <input asp-for="ConfirmPassword" class="form-control shadow" id="confirmPassword" />
        <button type="button" class="btn btn-outline-secondary" onclick="togglePassword('confirmPassword')">
                show

        </button>
    </div>

        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
    </div>
    <div asp-validation-summary="All" class="text-danger"></div>


    <input type="submit" class="btn btn-primary mt-3 mx-auto d-grid" value="Change Password" />
</form>

@if (ViewBag.Message != null)
{
    <div class="alert alert-success">@ViewBag.Message</div>
}
</div>
@section Scripts {
    <script>
        function togglePassword(fieldId) {
            var input = document.getElementById(fieldId);
            if (input.type === "password") {
                input.type = "text";
            } else {
                input.type = "password";
            }
        }
    </script>
}